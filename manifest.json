{
    "manifest_version": 3,
    "name": "OBS Song Details",
    "description": "Get details on the song you are listening to display on OBS",
    "version": "0.1",
    "permissions": ["activeTab", "storage", "scripting"],
    "action": {
      "default_popup": "popup.html",
      "default_icon": "hello.png"
    },
    "content_scripts": [
        {
          "matches": ["http://*/*","https://*/*"],
          "js": ["jquery-3.7.1.min.js", "bootstrap.min.js", "content.js"]
        }
      ]
  }